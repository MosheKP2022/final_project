<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="profile_picture_box">Profile picture</label>
      
    <input type="text" id="profile_picture_box" name="query_profile_picture">
  </div>
         
  <div>
    <label for="first_name_box">First name</label>
      
    <input type="text" id="first_name_box" name="query_first_name">
  </div>
         
  <div>
    <label for="last_name_box">Last name</label>
      
    <input type="text" id="last_name_box" name="query_last_name">
  </div>
         
  <div>
    <label for="about_me_box">About me</label>
    <textarea id="about_me_box" name="query_about_me" rows="3"></textarea>
  </div>
         
  <div>
    <label for="phone_box">Phone</label>
      
    <input type="text" id="phone_box" name="query_phone">
  </div>
         
  <div>
    <label for="address_box">Address</label>
      
    <input type="text" id="address_box" name="query_address">
  </div>
         
  <div>
    <label for="kids1_age_box">Kids1 age</label>
      
    <input type="text" id="kids1_age_box" name="query_kids1_age">
  </div>
         
  <div>
    <label for="kids3_age_box">Kids3 age</label>
      
    <input type="text" id="kids3_age_box" name="query_kids3_age">
  </div>
         
  <div>
    <label for="kids4_age_box">Kids4 age</label>
      
    <input type="text" id="kids4_age_box" name="query_kids4_age">
  </div>
         
  <div>
    <label for="kids5_age_box">Kids5 age</label>
      
    <input type="text" id="kids5_age_box" name="query_kids5_age">
  </div>
         
  <div>
    <label for="kids6_age_box">Kids6 age</label>
      
    <input type="text" id="kids6_age_box" name="query_kids6_age">
  </div>
         
  <div>
    <label for="private_box">Private</label>
    <input id="private_box" name="query_private" type="checkbox">
  </div>
         
  <div>
    <label for="kids2_age_box">Kids2 age</label>
      
    <input type="text" id="kids2_age_box" name="query_kids2_age">
  </div>
         
  <div>
    <label for="offerings_count_box">Offerings count</label>
      
    <input type="text" id="offerings_count_box" name="query_offerings_count">
  </div>
         
  <div>
    <label for="comments_count_box">Comments count</label>
      
    <input type="text" id="comments_count_box" name="query_comments_count">
  </div>
         
  <div>
    <label for="messages_to_administrators_count_box">Messages to administrators count</label>
      
    <input type="text" id="messages_to_administrators_count_box" name="query_messages_to_administrators_count">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>
