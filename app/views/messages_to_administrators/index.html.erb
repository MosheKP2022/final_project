<div>
  <div>
    <h1>
      List of all messages to administrators
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new messages to administrator
    </h2>

    <form action="/insert_messages_to_administrator" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create messages to administrator
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_messages_to_administrators.each do |a_messages_to_administrator| %>
      <tr>
        <td>
          <%= a_messages_to_administrator.id %>
        </td>

        <td>
          <%= a_messages_to_administrator.title %>
        </td>

        <td>
          <%= a_messages_to_administrator.body %>
        </td>

        <td>
          <%= a_messages_to_administrator.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_messages_to_administrator.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_messages_to_administrator.updated_at) %> ago
        </td>

        <td>
          <a href="/messages_to_administrators/<%= a_messages_to_administrator.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
