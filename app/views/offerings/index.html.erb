<div>
  <div>
    <h1>
      List of all offerings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new offering
    </h2>

    <form action="/insert_offering" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="min_age_box">
          Min age
        </label>

        <input type="text" id="min_age_box" name="query_min_age">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="video_box">
          Video
        </label>

        <input type="text" id="video_box" name="query_video">
      </div>

      <div>
        <label for="giver_id_box">
          Giver
        </label>

        <input type="text" id="giver_id_box" name="query_giver_id">
      </div>

      <div>
        <label for="max_age_box">
          Max age
        </label>

        <input type="text" id="max_age_box" name="query_max_age">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="time_box">
          Time
        </label>

        <input type="time" id="time_box" name="query_time">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <div>
        <label for="labeled_offerings_count_box">
          Labeled offerings count
        </label>

        <input type="text" id="labeled_offerings_count_box" name="query_labeled_offerings_count">
      </div>

      <button>
        Create offering
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Min age
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
          Address
        </th>

        <th>
          Video
        </th>

        <th>
          Giver
        </th>

        <th>
          Max age
        </th>

        <th>
          Price
        </th>

        <th>
          Date
        </th>

        <th>
          Time
        </th>

        <th>
          Comments count
        </th>

        <th>
          Labeled offerings count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_offerings.each do |an_offering| %>
      <tr>
        <td>
          <%= an_offering.id %>
        </td>

        <td>
          <%= an_offering.title %>
        </td>

        <td>
          <%= an_offering.min_age %>
        </td>

        <td>
          <%= an_offering.description %>
        </td>

        <td>
          <%= an_offering.image %>
        </td>

        <td>
          <%= an_offering.address %>
        </td>

        <td>
          <%= an_offering.video %>
        </td>

        <td>
          <%= an_offering.giver_id %>
        </td>

        <td>
          <%= an_offering.max_age %>
        </td>

        <td>
          <%= an_offering.price %>
        </td>

        <td>
          <%= an_offering.date %>
        </td>

        <td>
          <%= an_offering.time %>
        </td>

        <td>
          <%= an_offering.comments_count %>
        </td>

        <td>
          <%= an_offering.labeled_offerings_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_offering.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_offering.updated_at) %> ago
        </td>

        <td>
          <a href="/offerings/<%= an_offering.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
