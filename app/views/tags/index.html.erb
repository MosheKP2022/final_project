<div>
  <div>
    <h1>
      List of all tags
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new tag
    </h2>

    <form action="/insert_tag" method="post">
      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category">
      </div>

      <div>
        <label for="sub_category_box">
          Sub category
        </label>

        <input type="text" id="sub_category_box" name="query_sub_category">
      </div>

      <div>
        <label for="labeled_offerings_count_box">
          Labeled offerings count
        </label>

        <input type="text" id="labeled_offerings_count_box" name="query_labeled_offerings_count">
      </div>

      <button>
        Create tag
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Sub category
        </th>

        <th>
          Labeled offerings count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tags.each do |a_tag| %>
      <tr>
        <td>
          <%= a_tag.id %>
        </td>

        <td>
          <%= a_tag.category %>
        </td>

        <td>
          <%= a_tag.sub_category %>
        </td>

        <td>
          <%= a_tag.labeled_offerings_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_tag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tag.updated_at) %> ago
        </td>

        <td>
          <a href="/tags/<%= a_tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
